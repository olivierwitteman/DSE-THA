%%% AIRFIELD TO PERFORMANCE

%% Assumptions



%% TAKE OFF
%% INPUTS
W_to=1                  ;                                       %%INPUT 
S=1                     ;                                       %%INPUT 
rho=1                   ;                                       %%INPUT    
Cl_max=1                ;                                       %%INPUT 
g=1                     ;                                       %%INPUT    
T_av_to=1               ;                                       %%INPUT    
D_av_to=1               ;                                       %%INPUT 
Dg_av_to=1              ;                                       %%INPUT 
gamma_to=1              ;                                       %%INPUT                  
H_scr=15.24             ;%[M]  %input from guide                %%INPUT
%% Calculations
%Ground distance
V_min = sqrt(2*W_to/(S*rho*Cl_max))
a_av = (g/W_to)*(T_av_to-D_av_to-Dg_av_to)
V_lof = 1.05*V_min

X_gd = V_lof^2/(2*a_av)

% Transition phase
X_tp_to = V_lof^2*sin(gamma_to)/(0.15*g)

% Climb distance
X_cd_to = H_scr-(1-cos((gamma_to)*(V_lof^2/(0.15*g))))/tan(gamma_to)

% TO total distance
X_TO_to = X_gd_to + X_tp_to + X_cd_to

%% LANDING
%% INPUTS 2

W_la = 1                ;                                       %%INPUT
T_av_la = 1             ;                                       %%INPUT
D_av_la = 1             ;                                       %%INPUT
Dg_av_la = 1            ;                                       %%INPUT
gamma_la = 1            ;                                       %%INPUT
Trans_time = 2          ;%[sec] time to transition              %%INPUT
mu = 1                  ;%[] drag coefficient                   %%INPUT

%% Calculations

V_ap = 1.3*V_min

% Airborne distance

X_ab_la = W^2*2*1.3^2/(2*g*S*rho*Cl_max*(T_av_rev + D_av + mu(W_la-L_av))) 

% Transition phase
X_tp_la = Trans_time * V_ap

% Braking phase

X_br_la = W^2*2*1.3^2
